<!--全部讲课信息-->
<template>
  <div class="co-top" >
    <swipeout>
      <swipeout-item transition-mode="follow" class="fo-tex"  v-for="(lectureInfo,index) in LectureInfoData" :key="index">
        <div slot="right-menu" v-if="isEdit == 1">
          <swipeout-button type="primary" @click.native="onButtonClick(lectureInfo)" style="font-size: 13px">编辑</swipeout-button>
          <swipeout-button v-if="$datedifference(lectureInfo.createdDate) < 30" type="warn" @click.native="deleteData(lectureInfo.id)" style="font-size: 13px">删除</swipeout-button>
        </div>
        <div slot="content" :class="{'vux-1px-b': index !== LectureInfoData.length}" >
            <span class="fo-span"></span><span>{{lectureInfo.lessonName}}</span>
            <p style="margin: 10px 0">
              <icon class="cu-img-size" style="color: #888888;font-size: 15px;margin-left: -2px;padding-right: 13px;" type="waiting-circle"></icon><span>{{lectureInfo.lessonDate|formatDate}}</span>
            </p>
            <p style="margin: 10px 0">
              <span class="right">
                <img class="cu-img-size" src="../assets/image/follow_up_operation.png" alt="">
                &nbsp;{{lectureInfo.operativeType}}
                </span>
            </p>
            <p style="margin: 10px 0">
              <span class="right"><img class="all-img-size" src="../assets/image/follow_up_position.png" alt="">
                <div-span v-bind:dictCode="'CH'" v-bind:dictItemCode="lectureInfo.lectureLocal"></div-span>
                <span v-if="lectureInfo.lectureLocal=='CH04'">
                    ({{lectureInfo.lectureLocalOther}})
                </span>
              </span>
            </p>
            <p style="margin: 10px 0">
              <span class="right"><img class="all-img-size " src="../assets/image/follow_up_product_information.png" alt="">
                <template v-for="(data, i) in lectureInfo.product[0]">
                  <div-span v-bind:dictCode="'CPXX'" v-bind:dictItemCode="data"></div-span>
                  <div-span v-bind:dictCode="'CPPP'" v-bind:dictItemCode="lectureInfo.product[1][i]"></div-span>
                  <!--产品信息选择-->
                <span v-if="lectureInfo.product[1][i] === 'CPPP11'">({{lectureInfo.productNote}})</span>
                <span v-if="(i+1)%1==0 && (lectureInfo.product[1][i+1] != null || lectureInfo.product[1][i+1] != undefined)">
                  <br>
                  <span style="margin-right: 30px"></span>
                </span>
                </template>
              </span>
            </p>
            <p style="margin: 10px 0">
              <span class="right"><img class="all-img-size" src="../assets/image/follow_up_product_information.png" alt="">&nbsp;{{lectureInfo.activityName}}</span>
            </p>
        </div>
      </swipeout-item>
    </swipeout>
    <div v-if="sumSize < sumData" style="text-align: center;padding: 10px" @click="getMore">查看更多...</div>

  </div>


</template>
<script>
  export default {
    name: 'AllIecture',
    data() {
      return{
        LectureInfoData:[],
        sumData: 0,
        sumSize: 20,
        personId: ''
      }
    },
    props: ['personId', 'isEdit','backField','isOpen'],
    mounted(){

    },
    created(){
      this.getLectureInfo()
    },
    methods: {
      getLectureInfo () {
        this.$search('/api/lectureInfo', {page: 0, size: this.sumSize}, {'customer.id': this.personId}).then(request => {
          this.LectureInfoData = this.$sortData(request);
          this.sumData = this.$headers['x-total-count']
        }).catch(error => {
          console.log(error)
        })
      },
      deleteData (id) {
        let that = this
        that.$vux.confirm.show({
          title: '操作提醒',
          content: '是否确认删除?',
          onConfirm () {
            that.$del('/api/lectureInfo/' + id).then(val => {
              that.$vux.toast.text('删除成功', 'middle');
              that.getLectureInfo()
            }).catch(err => {
            })
          }
        })
      },
      onButtonClick (data) {
        this.$router.push({
          name: 'NewIecture',
          params: {
            title: '编辑讲课',
            data: data,
            backField: this.backField,
            isEdit:this.isEdit,
            personId:this.personId,
            start: 0
          }
        })
      },
      /*查看更多*/
      getMore () {
        this.sumSize = this.sumSize + 10
        this.$search('/api/lectureInfo', {page: 0,size: this.sumSize}, {'customer.id': this.personId}).then(request => {
          this.LectureInfoData = this.$sortData(request)
          this.sumData = this.$headers['x-total-count']
          if (this.sumData == 0) {
            this.$vux.toast.text('无动态', 'middle')
            return
          }
          if (this.sumSize > this.sumData) {
            this.$vux.toast.text('已获取全部', 'middle')
          }
        })
      }
    }
  }
</script>


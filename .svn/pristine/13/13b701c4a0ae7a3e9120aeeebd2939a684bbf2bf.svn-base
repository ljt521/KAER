<!--学会职务-->
<template>
  <div class="academic">
    <swipeout>
      <swipeout-item transition-mode="follow" class="fo-tex" v-for="(item,i) of list" :key="i" :disabled="isEdit==1?false:true">
        <div slot="right-menu">
          <swipeout-button type="primary" @click.native="onButtonClick(item)" style="font-size: 13px">编辑</swipeout-button>
          <swipeout-button v-if="$datedifference(item.createdDate) < 30" type="warn" @click.native="deleteData(item.id)" style="font-size: 13px">删除
          </swipeout-button>
        </div>
        <div slot="content">
          <cell>
            <span slot="title" class="content">
              <span class="spanCell"><div-span :dictCode="'XHJB'" :dictItemCode="item.academyLevel "></div-span></span>
              <div-span class="leftSpan1" style="margin-left: 0px;" :dictCode="'XHZW'"
                        :dictItemCode="item.position"></div-span><br>
              <p>
                <span class="leftSpan1">{{item.academyName}}</span>
              </p>
              <p>
                <span class="leftSpan1">{{item.studyGroupName}}</span>
              </p>
               <i></i>
            </span>
          </cell>
        </div>
      </swipeout-item>
    </swipeout>
    <div v-if="isEdit == 1" class="cardFootIcon vux-1px-t" v-on:click="goAacdemicTeam">
      <p>
        <x-icon class="x-icon" type="ios-plus-outline" size="20"></x-icon>
        新建学术团队
      </p>
    </div>
  </div>
</template>
<script>
  export default {
    name: 'AcademicDuty',
    data () {
      return {
        list: [],
      }
    },
    props: ['customerId', 'isEdit'],
    created () {
      this.requestData()
    },
    methods: {
      requestData () {
        this.$search('/api/academicteam', {}, {'customer.id': this.customerId}).then((val) => {
          this.list = val
        }).catch(err => {
        })
      },
      goAacdemicTeam () {
        this.$router.push({
          path: '/academic-team/' + this.customerId
        })
      },
      onButtonClick (e) {
        this.$router.push({
          name: "AcademicTeam",
          params: {
            title: '编辑学术团队',
            data: e
          }
        });
      },
      deleteData (id) {
        let that = this
        this.$vux.confirm.show({
          title: '操作提醒',
          content: '是否确认删除?',
          onConfirm () {
            that.$del('/api/academicteam/' + id).then(val => {
              that.requestData()
            }).catch(err => {
            })

          }
        })
      },

    }
  }
</script>

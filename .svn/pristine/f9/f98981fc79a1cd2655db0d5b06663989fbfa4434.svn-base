<template>
  <div id="setInfo">
    <div class="dy-top">
      <x-header class="x-header" slot="header" @on-click-back="goToBack" :left-options="{backText:'',preventGoBack:true}" :right-options="{showMore: false}">
        我的设置
      </x-header>
    </div>
    <div class="set-top">
      <span class="fo-span"></span>
      <h3 style="font-size: 14px">我的默认设置</h3>
    </div>
    <div class="set-radio">
      <group>
        <radio style="font-size: 13px;" :options="radio001" v-model="value" @on-change="change"></radio>
      </group>
    </div>
    <div v-transfer-dom>
      <actionsheet :menus="menus" v-model="showMenus" show-cancel></actionsheet>
    </div>
  </div>
</template>
<script>
  import {Actionsheet, TransferDom, Radio} from 'vux'

  export default {
    name: 'SetInfo',
    directives: {
      TransferDom
    },
    components: {
      Actionsheet,
      Radio
    },
    data () {
      return {
        menus: {
          menu1: 'Take Photo',
          menu2: 'Choose from photos'
        },
        showMenus: false,
        radio001: ['我的菜单', '动态菜单', '客户菜单'],
        value: window.localStorage.getItem('meSet')
      }
    },
    methods: {
      change(value) {
        window.localStorage.setItem('meSet', value);
      },

      goToBack(){
        this.$router.push("/mine")
      }
    }
  }
</script>

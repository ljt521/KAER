<template>
    <div class="divBox" >
      <swipeout>
        <swipeout-item transition-mode="follow"  v-for="(item,i) of list" :key="i">
          <div slot="right-menu" >
            <swipeout-button type="primary" @click.native="onButtonClick('/new-lang')">编辑</swipeout-button>
            <swipeout-button type="warn" @click.native="deleteData()">删除</swipeout-button>
          </div>
          <div slot="content" :class="{'vux-1px-b': i !== list.length}" >
            <cell is-link>
              <span slot="title" >
                <div-span :dictCode="'YZ'" :dictItemCode="item.languages"></div-span>:
                <div-span :dictCode="'YZCD'" :dictItemCode="item.proficiency"></div-span>
                <!--<span style="vertical-align:middle;" class="spanCell">{{item.key|toChinese}}</span>  {{item.value}}-->
              </span>
            </cell>
          </div>
        </swipeout-item>
      </swipeout>
      <div class="cardFootIcon"  v-on:click="goNewLang">
        <p><x-icon class="x-icon" type="ios-plus-outline" size="20"></x-icon> 新建语种</p>
      </div>
    </div>
</template>
<script>
  export default {
    name: 'ForeignAbility',
    data () {
      return {
        title:'',
        list: []
      }
    },
    created(){
      this.$get('/api/languages',{customerId:this.personId}).then( (value) => {
        this.list = value;
        console.log(value)
      }).catch(err => {
        console.log(err)
      })
    },
    props:['personId'],
    methods: {
      goNewLang() {
        this.$router.push('/new-lang/'+ this.personId)
      },
      deleteData(){
        this.$vux.confirm.show({
          title: '操作提醒',
          content: '是否确认删除?',
          onShow () {
            console.log('plugin show')
          },
          onHide () {
            console.log('plugin hide')
          },
          onCancel () {
            console.log('plugin cancel')
          },
          onConfirm () {
            console.log('plugin confirm')
          }
        })
      },
      onButtonClick(e) {
        if(e=='/new-lang'){
          this.$router.push({
            name:"NewLang",
            params:{
              title: '编辑语种'
            }
          });
          console.log(this.$router,2222)
        }else{
          this.$router.push({path:e})
        }



      },
    },
    filters: {
      toChinese: function (value) {
          switch (value) {
            case 'zh':
              value="汉语：";
              break;
            case 'eh':
              value="英语：";
              break;
          }
          return value
      }
    }
  }
</script>

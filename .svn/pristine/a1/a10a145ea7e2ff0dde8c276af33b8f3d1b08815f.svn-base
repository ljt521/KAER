<!--全部论文发表信息-->
<template>
  <div class="co-top" >
    <swipeout>
      <swipeout-item transition-mode="follow" class="fo-tex" v-for="(paperPublish,index) in paperPublishData" :key="index" >
        <div slot="right-menu" v-if="isEdit == 1">
          <swipeout-button type="primary" @click.native="onButtonClick(paperPublish)">编辑</swipeout-button>
          <swipeout-button v-if="$datedifference(paperPublish.createdDate) > 30" type="warn" @click.native="deleteData(paperPublish.id)">删除</swipeout-button>
        </div>
        <div slot="content" :class="{'vux-1px-b': index !== paperPublishData.length}" >
          <span class="fo-span"></span><span>{{paperPublish.paperName }}</span>
          <p style="margin: 10px 0">
            <span >
              <icon class="all-img-size" style="color: #888888;font-size: 15px;margin-left: -2px;padding-right: 13px;" type="waiting-circle"></icon>
              {{paperPublish.paperYear}}
            </span>
          </p>
          <p style="margin: 10px 0">
            <span class="right"><img class="all-img-size" src="../assets/image/follow_up_operation.png" alt="">
            <div-span v-bind:dictCode="'SMFS'" v-bind:dictItemCode="paperPublish.signType"></div-span>
            </span>
          </p>
          <p style="margin: 10px 0">
            <span class="right"><img class="all-img-size" src="../assets/image/follow_up_role.png" alt="">
            <div-span v-bind:dictCode="'QK'" v-bind:dictItemCode="paperPublish.periodicalType"></div-span>
            </span>
          </p>
        </div>
      </swipeout-item>
    </swipeout>
    <div v-if="sumSize < sumData" style="text-align: center;padding: 10px" @click="getMore">查看更多...</div>
  </div>

</template>
<script>
  export default {
    name: 'AllPaper',
    data() {
      return{
        paperPublishData:[],
        sumData: 0,
        sumSize: 20
      }
    },
    props:['personId', 'isEdit'],
    created(){
      this.getPaperPublishInfo()
    },

    methods:{
      getPaperPublishInfo(){
        this.$search('/api/PaperPublishInfo', {page: 0, size: this.sumSize}, {'customer.id': this.personId}).then(request => {
          this.paperPublishData = request;
          this.sumData = this.$headers['x-total-count']
        }).catch(error => {
          console.log(error)
        })
      },
      deleteData(id){
        let that=this
        that.$vux.confirm.show({
          title: '操作提醒',
          content: '是否确认删除?',
          onConfirm () {
            that.$del('/api/PaperPublishInfo/'+ id).then( val => {
              that.$vux.toast.text('删除成功', 'middle');
              that.getPaperPublishInfo()
            }).catch( err => {})
          }
        })},
      onButtonClick(data){
        this.$router.push({
          name: 'NewPaper',
          params: {
            title: '编辑论文发表',
            data:data
          }
        })
      },
      /*查看更多*/
      getMore () {
        this.sumSize = this.sumSize + 10
        this.$search('/api/PaperPublishInfo', {page: 0,size: this.sumSize}, {'customer.id': this.personId}).then(request => {
          this.paperPublishData = request;
          this.sumData = this.$headers['x-total-count']
          if (this.sumData == 0) {
            this.$vux.toast.text('无动态', 'middle')
            return
          }
          if (this.sumSize > this.sumData) {
            this.$vux.toast.text('已获取全部', 'middle')
          }
        })
      }


    }
  }
</script>


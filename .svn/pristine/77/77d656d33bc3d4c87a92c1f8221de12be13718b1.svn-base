<!--作者：吕俊涛 功能：动态组件-->
<template>
  <div id="timeAx">
    <div>
      <div class="divBox"></div>
      <div class="space" v-for="(item, index) of list">
        <div class="dy-div-icon" v-if="index != list.length - 1">
          <icon type="waiting-circle"></icon>
        </div>
        <div class="dy-div">
          <i class="dy-size">{{item.createdDate|formatDate}}</i>
          <i class="dy-size2">{{item.personName}}</i>
          <i class="dy-size3">
            <span>{{item.direction}}</span>
            <hos-span v-bind:code="item.hospitalCode"></hos-span>
            <span class="router-link" @click="goToCusInfo(item)">@{{item.customerName}}@</span>
            <span>{{item.obj}}</span>
            <span class="router-link" @click="goDiaLog(item)">#{{item.content}}#</span>
          </i>
        </div>
      </div>
      <div v-if="sumSize < sumData" @click="getDynamic('more')">查看更多...</div>
    </div>
    <x-dialog v-model="showToast" class="dialog-demo" @click="showToast = !showToast" :hide-on-blur="true"
              :dialog-style="{'max-width': '80%', width: '80%', height: '50px'}">
    </x-dialog>
  </div>
</template>

<script>
  import {XDialog} from 'vux'
  import {TransferDom} from 'vux'

  export default {
    name: 'TimeAxis',
    directives: {
      TransferDom
    },
    components: {
      XDialog
    },
    data () {
      return {
        list: [],
        showToast: false,
        sumSize: 10,
        sumData: 0,
        id: this.cusId,
        objCode: '',
        objId: '',
        dialogData: ''
      }
    },
    props: ['cusId'],
    watch: {
      cusId (newValue, oldValue) {
        if (newValue != oldValue) {
        }
        this.id = this.cusId
        this.getDynamic()
      }
    },
    created () {
      this.getDynamic()
    },
    methods: {
      getDynamic (e) {
        let url = '/api/customerDynamic'
        if (e) {
          this.sumSize = this.sumSize + 10
        }
        if (this.id) {
          this.$search(url, {
            sort: 'createdDate,DESC',
            size: this.sumSize,
            page: 0
          }, {'customer.id': this.id}).then(info => {
            this.list = info;
            this.sumData = this.$headers['x-total-count'];
            if (this.sumData == 0) {
              this.$vux.toast.text('无动态', 'middle')
              return
            }
            if (this.sumSize > this.sumData) {
              this.$vux.toast.text('已获取全部', 'middle')
            }
          })
        } else {
          this.$get(url, {sort: 'createdDate,DESC', size: this.sumSize, page: 0}).then(info => {
            this.list = info;
            this.sumData = this.$headers['x-total-count'];
            if (this.sumData == 0) {
              this.$vux.toast.text('无动态', 'middle')
              return
            }
            if (this.sumSize > this.sumData) {
              this.$vux.toast.text('已获取全部', 'middle')
            }
          })
        }

      },
      goDiaLog (e) {
        console.log(e);
        this.objCode = e.objCode
        this.objId = e.objId
        this.showToast = !this.showToast;
      },
      goToCusInfo (e) {
        this.$router.push(`/userInfo/${e.customerId}/essential-info/${e.customerId}`);
      }
    }
  }
</script>


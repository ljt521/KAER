<script>
  import {XDialog} from 'vux'
  import {TransferDom} from 'vux'

  export default {
    name: 'TimeAxis',
    directives: {
      TransferDom
    },
    components: {
      XDialog
    },
    data () {
      return {
        list: [],
        showToast: false,
        sumSize: 10,
        sumData: 0,
        id: this.cusId,
        objCode: '',
        objId: '',
        dialogData: '',
        onFetching: false,
        allFlag: false,
      }
    },
    props: ['cusId'],
    watch: {
      cusId (newValue, oldValue) {
        if (newValue != oldValue) {
        }
        this.id = this.cusId
        this.getDynamic()
      }
    },
    created () {
      this.getDynamic()
    },
    mounted() {
      this.$nextTick(() => {
        this.$refs.scrollerBottom.reset({top: 0})
      })
    },
    methods: {
      getDynamic (e) {
        if(this.allFlag) {
          this.onFetching = false
          return
        }
        if (this.onFetching) {
          // this.$vux.toast.text('', 'middle')
        } else {
          this.onFetching = true
          setTimeout(() => {
            if (e) {
              this.sumSize = this.sumSize + 10
            }
            this.$nextTick(() => {
              this.$refs.scrollerBottom.reset()
            })
            let url = '/api/customerDynamic'
            if (this.id) {
              this.$search(url, {sort: 'createdDate,DESC',size: this.sumSize,page: 0},{'customer.id': this.id}).then(info => {
                this.list = info;
                this.sumData = this.$headers['x-total-count'];
                if (this.sumSize > this.sumData) {
                  this.$vux.toast.text('已获取全部', 'middle')
                  this.allFlag = true
                  return
                }
                if (this.sumData == 0) {
                  this.$vux.toast.text('无动态', 'middle')
                  return
                }
                this.onFetching = false
              })
            } else {
              this.$get(url, {sort: 'createdDate,DESC', size: this.sumSize, page: 0},{'customer.id': this.id}).then(info => {
                this.list = info;
                this.sumData = this.$headers['x-total-count'];
                if (this.sumSize > this.sumData) {
                  this.$vux.toast.text('已获取全部', 'middle')
                  this.allFlag = true
                  return
                }
                if (this.sumData == 0) {
                  this.$vux.toast.text('无动态', 'middle')
                  return
                }
                this.onFetching = false
              })
            }
          }, 2000)
        }
      },
      goDiaLog (e) {
        this.objCode = e.objCode
        this.objId = e.objId
        // "SSYS" "JKXX" "HZXX" "XSCY" "LWFB" "CYKT"
        switch (this.objCode) {
          case 'SSYS':
            this.$get('/api/OperationDemoInfo/' + this.objId).then(request => {
              this.dialogData = this.$sortData([request])[0]
            })
            break
          case 'JKXX':
            this.$get('/api/lectureInfo/' + this.objId).then(request => {
              this.dialogData = this.$sortData([request])[0]
            })
            break
          case 'HZXX':
            this.$search('/api/Consultation/' + this.objId).then(request => {
              this.dialogData = this.$sortData([request])[0]
            })
            break
          case 'XSCY':
            this.$search('/api/AcademicJoin/' + this.objId).then(request => {
              this.dialogData = request
            })
            break
          case 'LWFB':
            this.$search('/api/PaperPublishInfo/' + this.objId).then(request => {
              this.dialogData = request
            })
            break
          case 'CYKT':
            this.$search('/api/partakeResearch/' + this.objId).then(request => {
              this.dialogData = request
            })
            break
        }
        if(this.dialogData) {
          setTimeout(() => {
            this.showToast = !this.showToast;
          }, 100)
        }
      },
      goToCusInfo (e) {
        this.$router.push(`/userInfo/${e.customerId}/essential-info/${e.customerId}`);
      }
    }
  }
</script>


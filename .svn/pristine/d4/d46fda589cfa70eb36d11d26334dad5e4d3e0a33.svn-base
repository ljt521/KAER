<script>
  import {Scroller, LoadMore} from 'vux'

  export default {
    name: 'Customer',
    components: {
      Scroller,
      LoadMore
    },
    data () {
      return {
        area: '',
        deptCode: '',
        customerData: [],
        subCustomerData: [],
        department: '',
        onFetching: false,
        sizeData: 5,
        orderHight: ''
      }
    },
    mounted () {
      this.$get('/api/customer', {sort: 'isFollowUp,name,DESC', page: 0, size: 10}).then(info => {
        this.customerData = info
      }).catch(error => {
        console.log(error)
      })
      this.$search('/api/customer', {sort: 'isFocusOn,isFollowUp,name,DESC', page: 0, size: 10}).then(info => {
        this.subCustomerData = info
        this.onFetching = info.length == 0
      }).catch(error => {
        console.log(error)
      })
      this.$nextTick(() => {
        if (this.$refs.scrollerBottom) {
          this.$refs.scrollerBottom.reset({top: 0})
        }
      })
      this.$refs.scrollerBottom.styles.height = parseInt(this.$refs.scrollerBottom.styles.height, 10) - 120 + 'px'
    },
    methods: {
      onChange (val) {
        console.log(val)
      },
      onTyChange () {
      },
      goAllSubordinates () {
        this.$router.push('/all-subordinates')
      },
      goNewCustomer () {
        this.$router.push('/new-custom')
      },
      openDiaLog (id) {
        let self = this
        self.$refs['NewDiaLogDom'].isShowDia(true, id)
      },
      goToDynamic (id) {
        this.$router.push({
          path: '/userInfo/' + id + '/dynamic-assembly/' + id
        })
      },
      goCustomerInfo (id) {
        this.$router.push({
          path: '/userInfo/' + id + '/essential-info/' + id
        })
      },
      areaChange (e) {
        this.area = e.code
        this.$search('/api/customer', {sort: 'isFollowUp,name,DESC', page: 0, size: 10}, {
          area: this.area,
          deptCode: this.deptCode
        }).then(info => {
          this.customerData = info
        }).catch(error => {
          console.log(error)
        })
        this.$search('/api/customer', {sort: 'isFocusOn,isFollowUp,name,DESC', page: 0, size: 10}, {
          isSubData: 'true',
          area: this.area,
          deptCode: this.deptCode
        }).then(info => {
          this.subCustomerData = info
        }).catch(error => {
          console.log(error)
        })
      },
      departmentChange (e) {
        this.department = e.code ? e.code : null
        this.deptCode = e.code ? e.code : null
        this.$search('/api/customer', {sort: 'isFollowUp,name,DESC', page: 0, size: 10}, {
          area: this.area,
          deptCode: this.deptCode
        }).then(info => {
          this.customerData = info
        }).catch(error => {
          console.log(error)
        })
        this.$search('/api/customer', {sort: 'isFocusOn,isFollowUp,name,DESC', page: 0, size: 10}, {
          isSubData: 'true',
          area: this.area,
          deptCode: this.deptCode
        }).then(info => {
          this.subCustomerData = info
        }).catch(error => {
          console.log(error)
        })
      },
      onScrollBottom () {
        let _this = this
        if (_this.$headers['x-total-count'] == _this.subCustomerData.length) {
          _this.onFetching = true
          if (_this.$headers['x-total-count'] == 0) {
            _this.$vux.toast.text('无数据', 'middle')
          } else {
            _this.$vux.toast.text('已经是全部数据', 'middle')
          }
          return
        } else {
          _this.onFetching = false
        }
        if (_this.onFetching) {
        } else {
          _this.onFetching = true
          setTimeout(() => {
            _this.$nextTick(() => {
              if (_this.$refs.scrollerBottom) {
                _this.$refs.scrollerBottom.reset()
              }
            })
            _this.sizeData += 5
            _this.$search('/api/customer', {
              sort: 'isFocusOn,isFollowUp,name,DESC',
              page: 0,
              size: this.sizeData
            }).then(info => {
              _this.subCustomerData = info
            }).catch(error => {
              console.log(error)
            })
            _this.onFetching = false
          }, 2000)
        }
      }
    }
  }
</script>

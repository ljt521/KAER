  .new-select {
    height: 0;
    position: relative;
    top: -20px;
  }

  .weui-label {
    width: 80px !important;
  }

  .weui-icon-success-circle {
    font-size: 18px;
  }

  .weui-icon-circle {
    font-size: 18px;

<!--作者：莫岭红 功能：手术量-->
<template>
  <div class="operative">
    <swipeout>
      <swipeout-item transition-mode="follow"  v-for="(item,i) of list" :key="i" :disabled="isEdit==1?false:true">
        <div slot="right-menu" >
          <swipeout-button type="primary" @click.native="onButtonClick(item)" style="font-size: 13px">编辑</swipeout-button>
          <swipeout-button v-if="$datedifference(item.createdDate) < 30" type="warn" @click.native="deleteData(item.id)" style="font-size: 13px">删除</swipeout-button>
        </div>
        <div slot="content" >
          <cell >
            <span slot="title" class="content">
              <span class="spanCell">{{item.year}}：</span>
              <div-span class="leftSpan" :dictCode="'SSJS'" :dictItemCode="item.roleInSurgery "></div-span>
              <span class="rightSpan">{{item.surgeryVevolume }}</span>
              <i></i>
            </span>
          </cell>
        </div>
      </swipeout-item>
    </swipeout>
    <div v-if="isEdit == 1" class="cardFootIcon vux-1px-t"  v-on:click="goNewOperative">
      <p><x-icon class="x-icon" type="ios-plus-outline" size="20"></x-icon> 新建手术量</p>
    </div>
  </div>
</template>
<script>
  export default {
    name: 'OperativeVolume',
    data () {
      return {
        list:[]
      }
    },
    props:['customerId', 'isEdit'],
    created(){
      this.requestData()
    },
    methods: {
      requestData(){
        this.$search('/api/surgeryvolume',{},{'customer.id':this.customerId}).then( val => {
          this.list=val;
        }).catch( err => {})
      },
      goNewOperative() {
        this.$router.push('/new-operative/'+this.customerId)
      },
      onButtonClick(e) {
          this.$router.push({
            name:"NewOperative",
            params:{
              title: '编辑手术量',
              data: e
            }
          });
      },
      deleteData(id){
        let that = this
        this.$vux.confirm.show({
          title: '操作提醒',
          content: '是否确认删除?',
          onConfirm () {
            that.$del('/api/surgeryvolume/'+ id).then( val => {
              that.$vux.toast.text('删除成功', 'middle');
              that.requestData();
            }).catch( err => {})
          }
        })
      },


    }
  }
</script>

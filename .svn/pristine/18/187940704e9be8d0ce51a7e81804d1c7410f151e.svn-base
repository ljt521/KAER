              params: {
                title: '编辑学术参与',
                data:data
              }
            })
            break
          default:
            this.$router.push({path: e})
        }
      },
      deleteInfo (path,id) {
        let that=this
        switch (path) {
          case '/new-consul-info':
            that.$vux.confirm.show({
              title: '操作提醒',
              content: '是否确认删除?',

        switch (e) {
          case '/new-consul-info':
            this.$router.push({
              name: 'NewConsulInfo',
              params: {
                title: '编辑会诊',
                data:data
              }
            })
            break
          case '/new-oper-demo':
            this.$router.push({
              name: 'NewOperDemo',
              params: {
                title: '编辑手术演示',
                data:data
              }
            })

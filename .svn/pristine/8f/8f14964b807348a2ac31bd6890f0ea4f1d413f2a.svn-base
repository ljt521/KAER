          <span class="tree-name-span-sub">{{person.field06}}</span>
        </div>
      </div>
      <div v-if="person.field07 != '2'">
        <div class="us-care-sub" @click="careData">
          <div class="us-center-sub" v-if="myconcernscolleagueDto.isSubFocusOn == '0' ">
            <img src="../assets/image/client_details_follow.png" alt=""><span>关注</span>
          </div>
          <div class="us-center-sub" v-if="myconcernscolleagueDto.isSubFocusOn == '1' ">

<script>
  export default {
    name: 'SubordinatesCustomer',
    data () {
      return {
        baseUrl: this.$baseURL,
        customerData: [],
        sizeData: 5,
        sumData: 0,
        person:{},
        hasPermission: 0,
        isCurrentLogin: '',//是否当前登录人
        backField:this.$route.query,
        myconcernscolleagueDto: {
          colleagueId:this.$route.params.id,
          isSubFocusOn: Number
        },
      }
    },
    mounted () {
      let personId = this.$route.params.id
      this.$get('/api/customer/findByPerson',{personId:personId}).then(info => {
        this.person = info;
        this.myconcernscolleagueDto.isSubFocusOn = info.field02
      })
      this.$get('/api/customerPermisson/hasPermisson').then(info => {
        this.hasPermission = info.hasPermission;
      }).catch(error =>{
        console.log(error)
      })

      if (this.backField.previousPage==='AllColleagues'){
        this.$get('/api/customer/getCustomerByColleaguesId',{colleaguesId:personId}).then(info=>{
          this.customerData = info
        }).catch(error =>{
          console.log(error);
        })
        return
      }

      this.$search('/api/customer', {sort: 'isFollowUp,name,DESC'},{'leader.id':personId}).then(info => {
        this.customerData = info
      }).catch(error => {
        console.log(error)
      })

    },
    methods: {
      //客户信息
      goCustomerInfo (id) {
        this.$router.push({
          path: '/userInfo/' + id + '/essential-info/' + id,
          query:{
              previousPage:this.backField.previousPage,
              subId:this.$route.params.id,
          }
        })
        sessionStorage.setItem('tabIndex', '1')
      },
      //动态信息
      goToDynamic (id) {
        this.$router.push({
          path: '/userInfo/' + id + '/dynamic-assembly/' + id,
          query:{
            previousPage:this.backField.previousPage,
            subId:this.$route.params.id
          }
        })
        sessionStorage.setItem('tabIndex', '4')
      },
      //日常跟进
      openDiaLog (id) {
        let self = this
        self.$refs['NewDiaLogDom'].isShowDia(true, id)
      },
      //关注功能
      careData(){
        if (this.myconcernscolleagueDto.isSubFocusOn == '0') {
          this.myconcernscolleagueDto.isSubFocusOn = 1
          this.$post('/api/myconcernscolleague/attention', this.myconcernscolleagueDto).then(info => {
            this.$vux.toast.text('关注成功', 'middle')
          }).catch(error => {
            this.$vux.toast.text('关注失败', 'middle')
          })
        } else {
          this.myconcernscolleagueDto.isSubFocusOn = 0
          this.$del('/api/myconcernscolleague/del/' + this.myconcernscolleagueDto.colleagueId).then(info => {
            this.$vux.toast.text('取消关注成功', 'middle')
          }).catch(error => {
            this.$vux.toast.text('取消关注失败', 'middle')
          })
        }
      },
      //返回
      goToBack(){
        if (this.backField.previousPage === 'dynamic') {
          this.$router.push('/dynamic')
          return
        }
        if (this.backField.previousPage === 'AllSubordinates') {
          this.$router.push({
            path:'/all-subordinates',
            query:{previousPage:this.backField.previousPage}
          })
          return
        }
        if (this.backField.previousPage === 'AllColleagues'){
          this.$router.push("/all-colleagues")
          return
        }
        if(this.backField.previousPage === 'customer'){
          this.$router.push("/customer");
        }
        if (this.backField.previousPage === 'DynamicAssembly') {
          this.$router.push({
            path:'/userInfo/'+this.backField.customerId+'/dynamic-assembly/'+this.backField.customerId,
          })
          sessionStorage.setItem('tabIndex', '4')
        }
        if (this.backField.previousPage === 'concernSub') {
          this.$router.push({
            path:"/concern-sub",
          });
        }
        if (!this.backField.previousPage && this.backField.customerId) {
          this.$router.push({
            path:'/userInfo/'+this.backField.customerId+'/dynamic-assembly/'+this.backField.customerId,
          })
          sessionStorage.setItem('tabIndex', '4')
        }
      }
    }
  }
</script>


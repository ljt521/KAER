<!--全部会诊信息-->
<template>
  <div class="allco-top">
    <swipeout>
      <swipeout-item transition-mode="follow" class="fo-tex" v-for="(consultation,index) in consultationData"
                     :key="index">
        <div slot="right-menu">
          <swipeout-button type="primary" @click.native="onButtonClick(consultation)">编辑</swipeout-button>
          <swipeout-button type="warn" @click.native="deleteData(consultation.id)">删除</swipeout-button>
        </div>
        <div slot="content" :class="{'vux-1px-b': index !== consultationData.length}">
          <span class="fo-span"></span>
          <span>
            <div-span v-bind:dictCode="'SSMC'" v-bind:dictItemCode="consultation.operationName"></div-span>
          </span>
          <p style="margin: 10px 0">
            <span class="right">
              <icon class="all-img-size " style="color: #888888;font-size: 15px;margin-left: -2px;padding-right: 13px;"
                    type="waiting-circle"></icon>
              {{consultation.consultationDate|formatDate}}
            </span>
          </p>
          <p style="margin: 10px 0">
            <span class="right">
              <img class="all-img-size " src="../assets/image/follow_up_role.png" alt="">
              <div-span v-bind:dictCode="'SSJS'" v-bind:dictItemCode="consultation.operativeRole"></div-span>
            </span>
          </p>
          <p style="margin: 10px 0">
            <span class="right">
              <img class="all-img-size " src="../assets/image/follow_up_position.png" alt="">
              <hos-span v-bind:code="consultation.operationLocal"></hos-span>
            </span>
          </p>
          <p style="margin: 10px 0">
            <span class="right"><img class="all-img-size " src="../assets/image/follow_up_product_information.png"
                                     alt="">
              <template v-for="(data, i) in consultation.product[0]">
                <div-span v-bind:dictCode="'CPXX'" v-bind:dictItemCode="data"></div-span>
                <div-span v-bind:dictCode="'CPPP'" v-bind:dictItemCode="consultation.product[1][i]"></div-span>
              </template>
            </span>
          </p>
        </div>
      </swipeout-item>
    </swipeout>
    <div v-if="sumSize < sumData" style="text-align: center;padding: 10px" @click="getMorHospital">查看更多...</div>
  </div>
</template>
<script>
  export default {
    name: 'AllConsultation',
    data () {
      return {
        consultationData: [],
        sumData: 0,
        sumSize:1
      }
    },
    props: ['personId'],
    created () {
      this.getConsultation()
    },
    methods: {
      getConsultation () {
        this.$search('/api/Consultation', {page: 0, size: this.sumSize}, {'customer.id': this.personId}).then(request => {
          this.consultationData = this.$sortData(request)
          this.sumData = this.$headers['x-total-count']
        }).catch(error => {
          console.log(error)
        })
      },
      onButtonClick (data) {
        this.$router.push({
          name: 'NewConsulInfo',
          params: {
            title: '编辑会诊',
            data: data
          }
        })
      },
      deleteData (id) {
        let that = this
        that.$vux.confirm.show({
          title: '操作提醒',
          content: '是否确认删除?',
          onConfirm () {
            that.$del('/api/Consultation/' + id).then(val => {
              that.$vux.toast.text('删除成功', 'middle')
              that.getConsultation()
            }).catch(err => {
            })
          }
        })
      },
      /*查看更多*/
      getMorHospital () {
        this.sumSize = this.sumSize + 10
        this.$search('/api/Consultation', {page: 0, size: this.sumSize}, {'customer.id': this.personId}).then(info => {
          this.consultationData = this.$sortData(info)
          this.sumData = this.$headers['x-total-count']
          if (this.sumData == 0) {
            this.$vux.toast.text('无动态', 'middle')
            return
          }
          if (this.sumSize > this.sumData) {
            this.$vux.toast.text('已获取全部', 'middle')
          }
        })
      }

    }
  }
</script>


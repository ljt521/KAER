<!--全部参与课题-->
<template>
  <div class="co-top" >
    <swipeout>
      <swipeout-item transition-mode="follow" class="fo-tex" v-for="(partakeResearch,index) in partakeResearchData" :key="index" >
        <div slot="right-menu" >
          <swipeout-button type="primary" @click.native="onButtonClick(partakeResearch)">编辑</swipeout-button>
          <swipeout-button type="warn" @click.native="deleteData(partakeResearch.id)">删除</swipeout-button>
        </div>
        <div slot="content" :class="{'vux-1px-b': index !== partakeResearchData.length}" >

            <span class="fo-span"></span><span>{{partakeResearch.researchName }}</span>
            <p style="margin: 10px 0">
        <span class="right"><img class="cu-img-size" src="../assets/image/follow_up_operation.png" alt="">
          <div-span v-bind:dictCode="'KTLX'" v-bind:dictItemCode="partakeResearch.researchType"></div-span>
        </span>
              <span class="right"><img class="cu-img-size" src="../assets/image/follow_up_role.png" alt="">
          <div-span v-bind:dictCode="'CYFS'" v-bind:dictItemCode="partakeResearch.partakeMode"></div-span>
        </span>
              <span >
          <icon style="color: #888888;font-size: 15px;" type="waiting-circle"></icon>
          {{partakeResearch.beginDate|formatDate}}
        </span>
            </p>


        </div>
      </swipeout-item>
    </swipeout>


  </div>
</template>
<script>
  export default {
    name: 'AllPaper',
    data() {
      return{
        partakeResearchData:[]
      }
    },
    props:['personId'],
    created(){
      this.getPartakeResearch()
    },
    methods:{
      getPartakeResearch(){
        this.$search('/api/partakeResearch', {page: 0, size: 20}, {'customer.id': this.personId}).then(request => {
          this.partakeResearchData = request;
        }).catch(error => {
          console.log(error)
        })
      },
      deleteData(id){
        let that=this
        that.$vux.confirm.show({
          title: '操作提醒',
          content: '是否确认删除?',
          onConfirm () {
            that.$del('/api/partakeResearch/'+ id).then( val => {
              that.$vux.toast.text('删除成功', 'middle');
              that.getPartakeResearch()
            }).catch( err => {})
          }
        })},
      onButtonClick(data){
        this.$router.push({
          name: 'NewTopic',
          params: {
            title: '编辑参与课题',
            data:data
          }
        })
      }
    }
  }
</script>

